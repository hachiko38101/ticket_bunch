<%= render "shared/header"%>
<div class="index-main">
  <div class="hero">
  <%= image_tag "top_img.jpg", class:"hero-image" %>
  <%= render "shared/side_bar"%>
    <div class="top-main">
<div class="main-box">
  <h3 class="program-title">公演登録</h3>
  <div class="program-new-box">
    <%= form_with model: [@team, @program], url:team_program_path, method: :patch, id:"program-new-form", local: true do |f| %>
      <div class="program">
        <div class="program-name">
          <p>公演名(必須）</p>
          <%= f.text_field :name, class:"program-name-input"%>
        </div>

      </div>
      <div class="program-submit-box">
        <%= f.submit "登録",class:"btn-flat-border-submit", id:"new-submit" %>
      </div>
    <% end %>
  </div>
</div>
    </div>
  </div>
</div>
<%= render "shared/footer"%>